{
    "elements": [
        {
            "type": "CheckBox",
            "name": "AutoStartVPN",
            "caption": "Activate VPN on startup"
        },
        {
            "type": "List",
            "name": "AdvertiseRoutes",
            "caption": "Advertise Routes",
            "rowCount": 5,
            "add": true,
            "delete": true,
            "sort": {
                "column": "Route",
                "direction": "ascending"
            },
            "columns": [
                {
                    "caption": "Route",
                    "name": "Route",
                    "width": "auto",
                    "add": "",
                    "edit": {
                        "type": "ValidationTextBox"
                    }
                }
            ],
            "values": []
        }
    ],
    "actions": [
        {
            "type": "Button",
            "caption": "Download",
            "name": "DownloadButton",
            "onClick": "TSVPN_UIDownload($id);"
        },
        {
            "type": "ProgressBar",
            "indeterminate": true,
            "visible": false,
            "name": "DownloadIndicator"
        },
        {
            "type": "Label",
            "name": "TailscaleVersion",
            "caption": "",
            "visible": false
        },
        {
            "type": "Label",
            "name": "TailscaleDeamon",
            "caption": "",
            "visible": false
        },
        {
            "type": "Button",
            "caption": "Start Service",
            "name": "StartServiceButton",
            "onClick": "TSVPN_UIStartService($id);",
            "visible": false
        },
        {
            "type": "Label",
            "name": "TailscaleStatus",
            "caption": "",
            "visible": false
        },
        {
            "type": "PopupButton",
            "caption": "Authenticate with Tailscale",
            "closeCaption": "Cancel",
            "popup": {
                "caption": "Authenticate with Tailscale",
                "items": [
                    {
                        "type": "ValidationTextBox",
                        "caption": "Auth Key",
                        "name": "AuthKey"
                    }
                ],
                "buttons": [
                    {
                        "caption": "Authenticate",
                        "name": "AuthenticateStart",
                        "onClick": "TSVPN_UIStartTunnel($id, $AuthKey);"
                    }
                ]
            },
            "visible": false
        },
        {
            "type": "Button",
            "caption": "Start Tunnel",
            "name": "StartTunnelButton",
            "onClick": "TSVPN_UIStartTunnel($id, '');",
            "visible": false
        },
        {
            "type": "Button",
            "caption": "Reset completely",
            "confirm": "Do you really want to remove Tailscale completely with all associated data?",
            "name": "UninstallButton",
            "onClick": "TSVPN_UIUninstall($id);"
        },
        {
            "type": "Button",
            "caption": "Show Status (Debug)",
            "onClick": "TSVPN_UIShowStatus($id);"
        },
        {
            "type": "TestCenter",
            "visible": false
        }
    ]
}